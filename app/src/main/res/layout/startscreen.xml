<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.tic_tac_toe.StartscreenActivity"
    android:orientation="vertical">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/tic"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">
        <Button
            android:id="@+id/by5_board"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="5*5 Board"
            android:background="@drawable/button_shape"/>
        <Button
            android:id="@+id/by3_board"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3*3 Board"
            android:padding="20dp"
            android:background="@drawable/button_shape"/>

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yay! Let's Play!"
        android:textSize="38dp"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>
